VITE_APP_ENV=development
VITE_APP_TITLE="Task Management System - Development"
VITE_LOG_LEVEL=debug

# API Configuration
VITE_API_URL=http://localhost:3000/api/v1
VITE_WS_URL=ws://localhost:3000
VITE_API_TIMEOUT=30000

# Authentication - Google OAuth
# Note: Replace with actual development credentials from Google Cloud Console
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# Authentication - Microsoft OAuth
# Note: Replace with actual development credentials from Azure Portal
VITE_MS_CLIENT_ID=your-microsoft-client-id
VITE_MS_REDIRECT_URI=http://localhost:5173/auth/microsoft/callback

# Token Management
VITE_AUTH_TOKEN_EXPIRY=3600
VITE_REFRESH_TOKEN_EXPIRY=86400

# Development Features
VITE_ENABLE_MOCK_API=true
VITE_ENABLE_DEBUG_TOOLS=true
VITE_ENABLE_HOT_RELOAD=true
VITE_MOCK_API_DELAY=500

# Monitoring and Debugging
VITE_ENABLE_API_LOGGING=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true