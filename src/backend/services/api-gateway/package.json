  "private": true,
  "engines": {
    "node": ">=18.x",
    "npm": ">=8.x"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "test": "jest",
