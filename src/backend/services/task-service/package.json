    "@nestjs/swagger": "^6.0.0",
    "@nestjs/terminus": "^9.0.0",
    "@opentelemetry/api": "^1.0.0",
    "@opentelemetry/sdk-node": "^1.15.0",
    "@task-management/shared": "^1.0.0",
    "@willsoto/nestjs-prometheus": "^5.0.0",
    "argon2": "^0.30.3",
    "bcryptjs": "^2.4.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "connect-redis": "^7.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "helmet": "^6.2.0",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.3.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "prom-client": "^14.2.0",
    "rate-limiter-flexible": "^3.0.0",
    "sanitize-html": "^2.11.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@jest/types": "^29.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.16.0",
    "@types/passport-jwt": "^3.0.0",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-jest": "^27.2.0",
    "husky": "^8.0.0",
    "jest": "^29.6.0",
    "jest-mock": "^29.0.0",
    "lint-staged": "^13.0.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.8.0",
