    "jsonwebtoken": "^9.0.0",
    "winston": "^3.8.2",
    "http-proxy-middleware": "^2.0.0",
    "express-validator": "^7.0.0",
    "redis": "^4.6.7",
    "prom-client": "^14.0.1",
    "dotenv": "^16.0.0",
    "express-session": "^1.17.3",
    "connect-redis": "^7.0.0",
    "morgan": "^1.10.0",
    "express-actuator": "^1.8.4",
