# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:5174
API_RATE_LIMIT=100
API_RATE_WINDOW=15m

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=task_management
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRY=7d
JWT_ALGORITHM=RS256

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
MS_CLIENT_ID=your_microsoft_client_id
MS_CLIENT_SECRET=your_microsoft_secret
MS_CALLBACK_URL=http://localhost:3000/auth/microsoft/callback
OAUTH_STATE_SECRET=your_oauth_state_secret

# Storage Configuration
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=task-management-files
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com
FILE_SIZE_LIMIT=10485760

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@taskmanagement.com
EMAIL_RATE_LIMIT=100
EMAIL_TEMPLATE_DIR=./templates/email

# Monitoring Configuration
APM_SERVICE_NAME=task-management-backend
APM_SERVER_URL=http://localhost:8200
APM_SECRET_TOKEN=your_apm_secret_token
APM_ENVIRONMENT=development
LOG_LEVEL=debug
TRACE_SAMPLE_RATE=1.0

# Security Configuration
CORS_MAX_AGE=86400
SECURE_COOKIE=false
COOKIE_SECRET=your_cookie_secret
CSRF_SECRET=your_csrf_secret
MAX_REQUEST_SIZE=50mb
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100