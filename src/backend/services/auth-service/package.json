{
  "name": "@task-management/auth-service",
  "version": "1.0.0",
  "private": true,
  "description": "Authentication microservice for task management system",
  "author": "Task Management System Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.x <19",
    "npm": ">=8.x"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "security:audit": "npm audit"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.0.0",
    "@nestjs/terminus": "^9.0.0",
    "@nestjs/throttler": "^4.0.0",
    "@willsoto/nestjs-prometheus": "^5.0.0",
    "argon2": "^0.31.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "connect-redis": "^7.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "helmet": "^6.0.1",
    "ioredis": "^5.3.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-oauth2": "^1.0.0",
    "prom-client": "^14.0.1",
    "rate-limiter-flexible": "^3.0.0",
    "speakeasy": "^2.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@jest/types": "^29.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/passport-jwt": "^3.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-jest": "^27.2.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-mock": "^29.0.0",
    "lint-staged": "^13.0.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.8.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.9.0"
  }
}