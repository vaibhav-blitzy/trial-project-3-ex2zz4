{
  "name": "@task-management/file-service",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.x",
    "npm": ">=8.x"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker build -t file-service .",
    "security:audit": "npm audit && snyk test"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/config": "^9.0.0",
    "@nestjs/swagger": "^6.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-cloudfront": "^3.0.0",
    "@task-management/shared": "^1.0.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.0",
    "multer": "^1.4.5-lts.1",
    "mime-types": "^2.1.35",
    "winston": "^3.8.2",
    "compression": "^1.7.4",
    "helmet": "^6.0.1",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.7.0",
    "prom-client": "^14.0.1",
    "@willsoto/nestjs-prometheus": "^5.0.0",
    "@nestjs/terminus": "^9.0.0",
    "cache-manager": "^5.2.0",
    "@nestjs/cache-manager": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/multer": "^1.4.7",
    "@types/mime-types": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "typescript": "^4.9.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "prettier": "^2.8.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "aws-sdk-mock": "^5.8.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.0.0",
    "nodemon": "^2.0.0"
  },
  "author": "Task Management System Team",
  "license": "MIT"
}