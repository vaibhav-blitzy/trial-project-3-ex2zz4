# Set default behavior to automatically normalize line endings
* text=auto

# JavaScript/TypeScript files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.xml text eol=lf
*.ini text eol=lf
*.env text eol=lf
*.env.* text eol=lf
*.config.* text eol=lf

# Style files
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf
*.styl text eol=lf
*.pcss text eol=lf

# Documentation and text files
*.md text eol=lf
*.mdx text eol=lf
*.txt text eol=lf
*.rst text eol=lf
CHANGELOG text eol=lf
README text eol=lf
LICENSE text eol=lf

# Template files
*.html text eol=lf
*.ejs text eol=lf
*.hbs text eol=lf
*.pug text eol=lf

# Image files as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary
*.svg text eol=lf
*.avif binary
*.bmp binary
*.tiff binary

# Font files as binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary

# Media files as binary
*.mp4 binary
